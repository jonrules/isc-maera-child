{% import 'grid_classes.html.twig' as grid %}
{% from 'column_classes.html.twig' import column_classes as column_classes %}

{% include 'head.twig' %}
<body class="{{ body_class }}">
	<a href="#content" class="sr-only skip-link screen-reader-text">{{ __( 'Skip to main content', 'maera' ) }}</a>
	<header class="menu-header">
		{% if not theme.theme_mod('navbar_disable', 0) %}
			{% set navwrapper = 'nav-wrapper' %}
			{% include 'main-menu.twig' %}
		{% endif %}
	</header>
	<header class="main-header">
		{% do action( 'get_header' ) %}
		{% do action( 'maera/header/before', post.ID ) %}
		<nav class="{{ red|apply_filters('maera/nav/class') }} lighten-1">
			<div class="nav-wrapper">
				<div class="container">
					<div class="col s12">
						{% block header %}
							{% include 'site-logo.twig' %}
							<a href="#" data-activates="mobile-menu" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
							{% for item in menu.primary.items %}
								{% if item.get_children %}
									<ul class="dropdown-content" id="dropdown-{{ item.ID }}">
										{% for child in item.get_children %}
											<li id="menu-item-{{item.ID}}" class="menu-item menu-item-type-{{child.type}} menu-item-object-{{child.object}} menu-item-{{child.ID}}{% if 'current-menu-item' in child.classes %} active{% endif %}">
												<a href="{{child.link}}">{{ child.title }}</a>
											</li>
										{% endfor %}
									</ul>
								{% endif %}
							{% endfor %}
				
							<ul class="right hide-on-med-and-down">
								{% for item in menu.primary.items %}
									<li id="menu-item-{{ item.ID }}" class="menu-item menu-item-type-{{item.type}} menu-item-object-{{item.object}} menu-item-{{item.ID}}{% if 'current-menu-item' in item.classes %} active{% endif %}">
										<a href="{{item.link}}"{% if item.get_children %} class="dropdown-button" data-activates="dropdown-{{ item.ID }}"{% endif %}>
											{{ item.title }}{% if item.get_children %}<i class="mdi-navigation-arrow-drop-down right"></i>{% endif %}
										</a>
									</li>
								{% endfor %}
							</ul>
						{% endblock %}
					</div>
				</div>
			</div>
		</nav>

		{% if not theme.theme_mod('header_front', 1) or ( theme.theme_mod('header_front', 1) and function('is_front_page') ) %}
			{% if header_img %}
				<div class="header hero parallax-container">
					<div class="parallax {{ ''|apply_filters('maera_md/header_classes') }}"><img src="{{ header_img }}"></div>
					<div class="container">
						{{ theme.theme_mod('header_content', '') }}
						<div class="{{ grid.row() }}">
							{% if sidebar.header %}
								{{ sidebar.header }}
							{% endif %}
						</div>
					</div>
				</div>
			{% endif %}
		{% endif %}
		{% do action( 'maera/header/after', post.ID ) %}
	</header>
